{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":enablePreCommit",
    "schedule:monthly",
    ":semanticCommits",
    ":semanticPrefixChore",
    ":label(renovate)"
  ],
  "enabledManagers": [
    "bazel-module",
    "bazelisk",
    "github-actions",
    "pre-commit"
  ],
  "ignoreDeps": [
    "bazel_skylib",
    "bzip2",
    "nlohmann_json",
    "platforms",
    "rules_python",
    "rules_cc",
    "xz",
    "zlib",
    "zstd"
  ]
}
