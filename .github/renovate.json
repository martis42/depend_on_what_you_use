{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":enablePreCommit",
    "schedule:monthly",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticPrefixChore",
    ":label(renovate)"
  ],
  "enabledManagers": [
    "bazel",
    "bazel-module",
    "github-actions",
    "pre-commit"
  ],
  "ignoreDeps": [
    "com_google_protobuf",
    "protobuf",
    "rules_python",
    "rules_cc"]
}
