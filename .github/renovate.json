{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    "schedule:weekends",
    ":semanticCommits"
  ],
  "labels": [
    "deps"
  ],
  "dependencyDashboard": true,
  "pre-commit": {
    "enabled": true
  },
  "enabledManagers": [
    "bazel",
    "bazel-module",
    "github-actions",
    "pip_requirements",
    "poetry",
    "pre-commit"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "rules_python"
      ],
      "matchManagers": [
        "bazel",
        "bazel-module"
      ],
      "enabled": false
    }
  ]
}
